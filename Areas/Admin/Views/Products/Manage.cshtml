@model LocalMarket.Services.Products.AllProductsServiceSearchModel
@{
    ViewData["Title"] = "Products";

}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Unit</th>
                <th scope="col">Category</th>
                <th scope="col">Status</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                int number = 1;
                <tr>
                    <td>@number</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td><a href=@product.ImageUrl target="_blank">@product.ImageUrl</a></td>
                    <td>@product.Price</td>
                    <td>@product.UnitName</td>
                    <td>@product.CategoryName</td>
                    <td>@(product.IsApproved ? "Approved" : "Waiting for approval")</td>

                    <td scope="col">
                        <a asp-area="" asp-controller="Product" asp-action="Delete" asp-route-productId=@product.Id class="btn btn-outline-danger">Delete</a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Approve" asp-route-productId="@product.Id" class="btn btn-outline-success"> Approve</a>
                    </td>
                </tr>
                @(number+=1);
            }
        </tbody>
    </table>
    </div>

