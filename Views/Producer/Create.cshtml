@model CreateProducerFormModel

@{
    ViewData["Title"] = "Be a producer";
}

<div class="container-fluid">
    <div class="mb-5"></div>
    <div class="row">
        <div class="col-6">

            <form method="post">
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+3598000000000"/>
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TownId"></label>
                    <select asp-for="TownId" class="form-control">
                        @foreach (var town in @Model.Towns)
                        {
                            <option value="@town.Id">@town.Name</option>

                        }
                    </select>
                    <span asp-validation-for="TownId" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" />
            </form>

        </div>
    </div>
</div>
