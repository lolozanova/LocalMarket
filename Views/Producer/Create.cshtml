@model CreateProducerFormModel

@{
    ViewData["Title"] = "Be a producer";
}

<h1>Be a producer</h1>
<div class="container-fluid">
    <div class="mb-5"></div>
    <div class="row">
        <div class="col-6">

            <form method="post">
                <div class="form-group">
                    <label asp-for="CompanyName">Company</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="08000000000" />
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="AboutMe">About Me</label>
                    <textarea asp-for="AboutMe" class="form-control"></textarea>
                    <span asp-validation-for="AboutMe" class="small text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TownId"></label>
                    <select asp-for="TownId" class="form-control">
                        @foreach (var town in @Model.Towns)
                        {
                            <option value="@town.Id">@town.Name</option>

                        }
                    </select>
                    <span asp-validation-for="TownId" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit" />
            </form>

        </div>
    </div>
</div>
